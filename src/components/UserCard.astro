---
// Define the type for the component's props
type UserProps = {
  firstName: string;
  lastName: string;
  phoneNumber: string;
  email: string;
  jobTitle: string;
  extension: string;
  cellNumber: string;
};
// Extract the props and cast them to the UserProps type
const {
  firstName,
  lastName,
  phoneNumber,
  email,
  jobTitle,
  extension,
  cellNumber,
} = Astro.props as UserProps;
const userName = `${firstName} ${lastName}`;
---

<section
  class="mx-auto my-0 prose flex-auto resize-none no-scrollbar overflow-y-scroll overscroll-contain scroll"
>
  <div
    data-pagefind-body
    class="user-card card mx-auto min-h-[28.5rem] max-h-[29.5rem] w-[21.5rem] m-0 mt-0 rounded-none bg-background shadow-md"
  >
    <section class="px-1 py-0">
      <div id="name-title">
        {
          userName !== "" ? (
            <h2
              id="user-name"
              class=" font-medium text-primary-content tracking-wide text-center uppercase "
            >
              {userName}
            </h2>
          ) : null
        }
      </div>
      <div class="mx-4">
        {
          jobTitle !== "" ? (
            <h4 class=" tracking-widest text-accent text-center uppercase font-normal ps-1 sm:pb-4 md:pb-5 lg:pb-6 ">
              {jobTitle}
            </h4>
          ) : null
        }
      </div>
    </section>
    <!-- {/* Conditionally render user name and job title */} -->
    <div class="divider divider-secondary box-decoration-slice m-0 mt-0"></div>
    <section class="mt-3">
      {
        cellNumber !== "" || null ? (
          <span>
        <div class="ms-8 mt-1 pt-1 pb-0">
        {
          phoneNumber !== "" ? (
            <>
              <p class="cat-name text-accent uppercase tracking-wide font-semibold -mb-2">
                Phone
              </p>
              <div class="divider divider-secondary m-0" />
              <p class="text-base uppercase tracking-wide text-base-content font-normal ps-0 pb-2 -mt-0.5">
                {phoneNumber} {extension !== "" ? `Ext: ${extension}` : null}
              </p>
            </>
          ) : null
        }
      </div>
      <div class="mt-1 pt-0 pb-0 me-8">
        <!-- {/* Conditionally render cell number */} -->
        {
          cellNumber !== "" ? (
            <>
              <p class="uppercase text-accent text-end tracking-wide font-semibold -mb-2">
                Mobile
              </p>
              <div class="divider divider-secondary m-0" />
              <p class="text-base uppercase tracking-wide text-base-content text-end font-normal ps-0 pb-0 -mt-0.5">
                {cellNumber}
              </p>
            </>
          ) : null
        }
      </div>
      <div class="ms-8 mt-1 pt-0 pb-0">
        <!-- {/* Conditionally render email */} -->
        {
          email !== "" ? (
            <>
              <p class="cat-name text-accent uppercase tracking-wide font-semibold -mb-2">
                Email
              </p>
              <div class="divider divider-secondary m-0" />
              <p class="text-base sm:text-xs md:text-base lg:text-xl text-base-content tracking-wider lowercase font-normal pb-2 -mt-0.5 ">
                {email}
              </p>
            </>
          ) : null
        }
      </div> 
      </span> ) : <div>
        <div class="ms-8 mt-1 pt-2 pb-0">
        {
          phoneNumber !== "" ? (
            <>
              <p class="cat-name text-accent uppercase tracking-wide font-semibold -mb-2">
                Phone
              </p>
              <div class="divider divider-secondary m-0" />
              <p class="text-base uppercase tracking-wide text-primary-content font-normal ps-0 pb-2 -mt-0.5">
                {phoneNumber} {extension !== "" ? `| Ext: ${extension}` : null}
              </p>
            </>
          ) : null
        }
      </div>
      <div class="me-8 mt-1 pt-2 pb-0">
        <!-- {/* Conditionally render email */} -->
        {
          email !== "" ? (
            <>
              <p class="cat-name text-accent uppercase tracking-wide text-end font-semibold -mb-2">
                Email
              </p>
              <div class="divider divider-secondary m-0" />
              <p class="text-base sm:text-xs md:text-base lg:text-xl text-base-content text-end tracking-wider lowercase font-normal pb-2 -mt-0.5 ">
                {email}
              </p>
            </>
          ) : null
        }
      </div>
      </div>
      }
    </section>
  </div>
</section>

<style>
  #user-name {
    overflow: visible;
    word-break: keep-all;
  }

  h2 {
    overflow: visible;
    padding-top: 0;
    margin-top: 25px;
    margin-bottom: 0;
  }
  h4 {
    padding-top: 0;
    margin-top: 10px;
  }
</style>
