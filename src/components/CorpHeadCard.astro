---
// Define properties for each head card
type Props = {
  headCard: {
    title: string;
    subtitle1: string;
    address: string;
    city: string;
    state: string;
    zip: string;
    subtitle2: string;
    phone: string;
    email: string;
    subtitle3: string;
    phone2: string;
    // phone3: string;
  }[];
};

// Extract the headCard data from props
const { headCard } = Astro.props;
