      <h2 class=" text-center text-nowrap font-light uppercase text-3xl line-clamp-2 divide-y-[1px] pt-3 px-2 py-1 tracking-wide">
        {card.title} <!-- Display the card title -->
      </h2>
      <!-- Divider line -->
      <div class="w-lvw p-0 m-0 border-b-2 border-slate-100 border-opacity-20 "></div>
      <!-- Sections for address, contact, and help desk information -->
      <!-- Address section -->
      <table class=" table-fixed border-collapse">
        <tbody class=" mt-10">
          <tr class=" text-sm border border-b-2 border-t-0 border-l-0 border-r-0 text-center align-middle py-1.5 border-slate-100 border-opacity-20">
              <td class=" pt-2 py-1.5 text-center align-middle w-auto " colspan="2" >{card.address} {card.city} {card.state} {card.zip}</td>
