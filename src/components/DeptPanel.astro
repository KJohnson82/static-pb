---


// Define the type for the component's props
export type Props = {
  DeptEmps: {
    id: number;
    deptName: string;
    location: number;
    employees: {
      id: number;
      firstName: string;
      lastName: string;
      jobTitle: string;
      isManager: number;
      phoneNumber: string;
      cellNumber?: string;
      extension?: string;
      email: string;
      location: number;
      department: number;
    }[];
  }[];
};

// Extract the DeptEmps data from props
const { DeptEmps } = Astro.props;
---

<!-- Render a list of departments -->
<ul class="space-y-2">
  {DeptEmps.map((department) => (
    <!-- Iterate over each department in DeptEmps array -->
    <li class="rounded-md shadow-lg overflow-hidden">
      <!-- Department name as clickable item -->
      <a href={`/departments/${department.id}`} class="block p-4 hover:bg-blue-500 hover:text-white transition-colors">
        <h3 class="text-xl font-semibold">{department.deptName}</h3>
      </a>
    </li>
  ))}
</ul>
