// Define types for plant data
type Locations = {
  PlantLocations: {
    id: number;
    locName: string;
    locNumber: number;
    address: string;
    city: string;
    state: string;
    zipcode: number;
    phoneNumber: string;
    faxNumber?: string;
    email: string;
    hours: string;
    departments: Depts["PlantDepts"];
  }[];
};

type Depts = {
  PlantDepts: {
    id: number;
    deptName: string;
    location: number;
    employees: Users["PlantUsers"];
  }[];
};

type Users = {
  PlantUsers: {
    id: number;
    firstName: string;
    lastName: string;
    jobTitle: string;
    phoneNumber: string;
    cellNumber?: string;
    extension?: string;
    email: string;
    location: number;
    department: number;
    isManger: number;
  }[];
};

const { PlantLocs } = Astro.props;
---

<!-- Render a list of plant locations -->
<ul class="space-y-4">
  {PlantLocs.map((location) => (
    <li class="bg-white shadow overflow-hidden rounded-lg">
      <!-- Direct link to the plant location page -->
      <a href={`/plants/${location.id}`} class="block p-4 hover:bg-gray-50">
        <div class="flex items-center justify-between">
          <div class="text-lg font-medium text-gray-700">
            {location.locName} - {location.city}, {location.state}
          </div>
          <div class="ml-2 flex-shrink-0 flex">
            <p class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
              {location.departments.length} Departments
            </p>
          </div>
        </div>
      </a>
    </li>
  ))}
</ul>
