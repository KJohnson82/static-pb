---
import { Icon } from 'astro-icon/components';

export type BottomNavItem = {
    icon: string, // Icon name for the nav item
    label: string, // Label text for the nav item
    to: string // URL or path the nav item will link to
};

// TypeScript type definition for props passed to the component
export type Props = {
    bottomNav: BottomNavItem[]; // Array of bottom navigation items
}

// Extracting bottomNav from Astro's props with type assertion
const {bottomNav} = Astro.props as Props;

---
<!-- Bottom navigation bar container -->
<div class="btm-nav static bg-primary shadow-sm ">
    <!-- Mapping over each navigation item to create buttons -->
    {bottomNav.map(({icon, label, to}) => (
        <a href={to} id={label}>
            <!-- Button for each navigation item -->
            <button class="grid-cols-1 resize-none items-center rounded-xl flex my-1 border-2 relative bg-transparent hover:shadow-sm hover:border-transparent transition ease-in duration-200 transform hover:-translate-y-1 hover:scale-105 active:translate-y-0 active:scale-95">
                <!-- Icon for the nav item -->
                <Icon name={icon} class="fill-white hover:fill-accent w-6 flex-1 text-white opacity-90" />
                <!-- Label for the nav item -->
                <span class="btm-nav-label font-medium text-xs text-clip ">{label}</span>
            </button>
        </a>
    ))}
</div>

<style>
    a button {
        display: flex;
        text-wrap: nowrap;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100%;
        width: 100%;
        padding: 0.5rem;
        border: none;
        background: none;
        color: inherit;
        cursor: pointer;
        outline: inherit;
    }
  .disabled {
    pointer-events: none;
    display:none
  }
</style>
