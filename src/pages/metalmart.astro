---
import Footer from "../components/Footer.astro";
import SearchBar from "../components/SearchBar.astro";
import Main from "../layouts/Main.astro";
import StoreHeadCard from "../components/StoreHeadCard.astro";
import MMBuild from "../components/MMBuild.astro";
import Data from '../data/Data.json';// Importing data from a JSON file
import NavBar from '../components/NavBar.astro';


---

<!-- // Render the main layout, setting the title for the page -->
<Main title="Metal Mart">
    <!-- // Outermost container for the content -->
    <div class="w-full h-full card card-compact">
      <!-- Section for the Metal Mart header card -->
      <section class="h-2/6 ">
        <!-- Render the StoreHeadCard component with provided properties -->
        <StoreHeadCard
          storeHeadCard={[
            {
              title: "Metal Marts",
              subtitle1: "Something Goes Here",
              subtitle2: "Something Else Goes Here",
              phone: "",
              subtitle3: "IT Help Desk:",
              phone2: "",
              phone3: "(800) 677-2516",
              email: "",
              address: "",
              city: "",
              state: "",
              zip: "",
              storeManager: "Something here",
              areaManager: "Something here",
            },
          ]}
        />
      </section>
  
      <!-- Visual divider between sections -->
      <div class="divider shadow-sm -mt-1 -mb-0"></div>
      
      <!-- Section for displaying Metal Mart data -->
      <section
        class="h-5/6 flex-auto no-scrollbar resize-none overflow-y-scroll overscroll-contain scroll-auto scroll-mx-px"
      >
      <section class="h-auto shadow-sm drop-shadow-sm">
        <NavBar />
      </section>
      <!-- <div class="ps-1 py-1 pe-2">
        <SearchBar />
      </div> -->
        <!-- Render the MMExPanel component with Metal Mart data -->
        <div
          class="h-full ps-2 py-1 pe-4 border-4 border-transparent focus-within:text-white no-scrollbar flex-auto scroll-auto overscroll-contain overflow-y-auto"
        >
          <MMBuild  metalmarts={Data.loctype["metal mart"].locations} />
        </div>
      </section>
  
      <div class="divider shadow-sm -mt-1 -mb-1"></div>
  
      <!-- Section for the page footer -->
      <section class="box-border h-1/5 mt-2">
        <!-- {/* Render the footer with navigation links */} -->
        <!-- <SearchBar /> -->
        <Footer
          bottomNav={[
            { icon: "home", label: "Home", to: "/" },
            { icon: "corporate", label: "Corporate", to: "/corporate" },
            // { icon: "store_1", label: "Metal Mart", to: "/metalmart" },
            {
              icon: "service_center",
              label: "Service Center",
              to: "/servicecenter",
            },
            { icon: "plant", label: "Plant", to: "/plant" },
          ]}
        />
      </section>
    </div>
  </Main>
  
  <style>
    .card {
      margin: 0 auto;
      /* box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.2); */
    }
  </style>