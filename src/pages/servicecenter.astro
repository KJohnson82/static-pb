---
import Footer from "../components/Footer.astro";
import SearchBar from "../components/SearchBar.astro";
import StoreHeadCard from "../components/StoreHeadCard.astro";
import Main from "../layouts/Main.astro";
import SCBuild from "../components/SCBuild.astro";
import Data from '../data/Data.json';// Importing data from a JSON file


---


<!-- // Render the main layout, setting the title for the page -->
<Main title="Service Center">
    <!-- // Outermost container for the content -->
    <div class="w-full h-full card card-compact">
      <!-- Section for the Service Center header card -->
      <section class="h-2/6">
        <!-- Render the StoreHeadCard component with provided properties -->
        <StoreHeadCard
          storeHeadCard={[
            {
              title: "Service Centers",
              subtitle1: "Maybe some info on area managers?",
              subtitle2: "Maybe other needed contact info?",
              phone: "(555) 555-5555",
              subtitle3: "IT Help Desk",
              phone2: "(555) 555-5555",
              phone3: "(866) 555-5555",
            },
          ]}
        />
      </section>
  
      <!-- Visual divider between sections -->
      <div class="divider -mt-2 -mb-2"></div>
  
      <!-- Section for displaying Service Center data -->
      <section
        class="h-5/6 flex-auto no-scrollbar resize-none overflow-y-scroll overscroll-contain scroll-auto scroll-mx-px"
      >
      <div class="ps-1 py-1 pe-2">
        <SearchBar />
      </div>
        <!-- Render the SCExPanel component with Service Center data -->
        <div
          class="h-full ps-2 py-1 pe-4 border-4 border-transparent focus-within:text-white no-scrollbar flex-auto scroll-auto overscroll-contain overflow-y-auto scroll-mx-px"
        >
          <!-- <SCBuild
            servicecenters={SCData.loctype["service center"].locations}
          /> -->
          <SCBuild servicecenters={Data.loctype["service center"].locations} />
        </div>
      </section>
  
      <div class="divider -mt-2 -mb-2"></div>
  
      <!-- Section for the page footer -->
      <section class="box-border h-1/5 mt-2">
        <!-- Render the Footer component with navigation links -->
        <!-- <SearchBar /> -->
        <Footer
          bottomNav={[
            { icon: "home", label: "Home", to: "/" },
            { icon: "corporate", label: "Corporate", to: "/corporate" },
            { icon: "store", label: "Mega Mart", to: "/megamart" },
            // { icon: "service_center", label: "Service Center", to: "/servicecenter" },
            { icon: "plant", label: "Plant", to: "/plant" },
          ]}
        />
      </section>
    </div>
  </Main>
  
  <style>
    .card {
      margin: 0 auto;
      box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.2);
    }
  </style>
  