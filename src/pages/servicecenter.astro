---
import Footer from "../components/Footer.astro";
import SearchBar from "../components/SearchBar.astro";
import StoreHeadCard from "../components/StoreHeadCard.astro";
import Main from "../layouts/Main.astro";
import SCBuild from "../components/SCBuild.astro";
import Data from "../data/Data.json"; // Importing data from a JSON file
import NavBar from "../components/NavBar.astro";
import RetailHeadCard from "../components/RetailHeadCard.astro";
---

<!-- // Render the main layout, setting the title for the page -->
<Main title="Service Center">
  <!-- // Outermost container for the content -->
  <div class="flex flex-col h-screen">
    <!-- Section for the Service Center header card -->
    <section class="">
      <!-- Render the StoreHeadCard component with provided properties -->
      <RetailHeadCard
        storeHeadCard={[
          {
            title: "Service Centers",
            subtitle1: "Area Manager",
            subtitle2: "Area Manager",
            phone: "Rickie Furr",
            subtitle3: "Area Manager",
            phone2: "Mark Rollins",
            phone3: "John Carter",
            email: "Area manager",
            address: "Matthew Snudden",
            city: "Area Manager",
            state: "Shaun Steinemann",
            zip: "",
            storeManager: "",
            areaManager: "",
          },
        ]}
      />
    </section>
    <!-- Visual divider between sections -->
    <div class="divide divide-none divide-y-2 py-0"></div>
    <!-- Section for displaying Service Center data -->
    <section
      class="flex-grow bg-neutral pb-0 pt-0 no-scrollbar overflow-y-scroll overscroll-contain scroll-auto scroll-mx-px "
    >
      <section class="shadow-sm drop-shadow-sm">
        <NavBar />
      </section>
      <!-- Render the SCExPanel component with Service Center data -->
      <div
        class="box-decoration-clone ps-2 py-1 pe-2 border-4 border-transparent overflow-y-auto no-scrollbar"
      >
        <SCBuild servicecenters={Data.loctype["service center"].locations} />
      </div>
    </section>
    <div class="divide divide-none divide-y-2 py-0"></div>
    <!-- Section for the page footer -->
    <section class="box-border pb-3 mt-0">
      <!-- Render the Footer component with navigation links -->
      <Footer
        bottomNav={[
          { icon: "home", label: "Home", to: "/" },
          { icon: "corporate", label: "Corporate", to: "/corporate" },
          { icon: "store", label: "Metal Mart", to: "/metalmart" },
          // { icon: "service_center", label: "Service Center", to: "/servicecenter" },
          { icon: "plant", label: "Plant", to: "/plant" },
        ]}
      />
    </section>
  </div>
</Main>

