---
import CorpHeadCard from "../components/CorpHeadCard.astro";
import Footer from "../components/Footer.astro";
import Main from "../layouts/Main.astro";
import Data from "../data/Data.json"; // Importing data from a JSON file
import PlantBuild from "../components/PlantBuild.astro";
import NavBar from "../components/NavBar.astro";
import PlantHeadCard from "../components/PlantHeadCard.astro";
import RetailHeadCard from "../components/RetailHeadCard.astro";
---

<!-- // Render the main layout, setting the title for the page -->
<Main title="Plant">
  <!-- // Outermost container for the content -->
  <div class="flex flex-col h-screen">
    <!-- Section for the plant-specific header card -->
    <section class="">
      <!-- Render the CorpHeadCard component with plant-specific information -->
      <RetailHeadCard
        storeHeadCard={[
          {
            title: "Plants",
            subtitle1: " Corp. Manufacturing",
            subtitle2: "Op's Regional Manager",
            phone: "Marc Scammerhorn",
            subtitle3: "Op's Regional Manager",
            phone2: "Bruce Mancuso",
            phone3: "Teresa Taylor",
            email: "Op's Regional Manager",
            address: "Jeff Hoopes",
            city: "Op's Regional Manager",
            state: "Don Jones",
            zip: "",
            storeManager: "Managers",
            areaManager: "Title",
          },
        ]}
      />
    </section>

    <!-- Visual divider between sections -->
    <div class="divide divide-none divide-y-2 py-0"></div>
    <!-- Section for displaying plant data -->
    <section
      class="flex-grow bg-neutral pb-0 pt-0 no-scrollbar overflow-y-scroll overscroll-contain scroll-auto scroll-mx-px "
    >
      <section class="shadow-sm drop-shadow-sm">
        <NavBar />
      </section>
      <!-- Render the PlantExPanel component with plant location data -->
      <div
        class="box-decoration-clone ps-2 py-1 pe-2 border-4 border-transparent overflow-y-auto no-scrollbar"
      >
        <PlantBuild PlantLocs={Data.loctype["plant"].locations} />
      </div>
    </section>
    <div class="divide divide-none divide-y-2 py-0"></div>
    <!-- Section for the page footer -->
    <section class="box-border pb-3 mt-0">
      <!-- Render the Footer component with navigation links -->
      <Footer
        bottomNav={[
          { icon: "home", label: "Home", to: "/" },
          { icon: "corporate", label: "Corporate", to: "/corporate" },
          { icon: "store", label: "Metal Mart", to: "/metalmart" },
          {
            icon: "service_center",
            label: "Service Center",
            to: "/servicecenter",
          },
          // { icon: "plant", label: "Plant", to: "/plant" },
        ]}
      />
    </section>
  </div>
</Main>

